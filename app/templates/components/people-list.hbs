<h2>{{title}}</h2>
<ul>
	{{#each people as |person|}}
	{{#if isShowing}}
		{{person.name}}
	{{else}}
		<button {{action 'nameShow'}}>Push</button>
	{{/if}}
	<div> 
	<ul class="row-fluid block-grid-3 employee-grid">
		<li><h5>{{person.position}}</h5>
			<ul>
		<li><img src="assets/images/{{person.id}}.jpg" alt="employee image" width= "150" height= "auto"></li>
		<li><p class="title-name">{{person.name}}</p></li>
			</ul></li>
	</ul>
	</div>
	{{/each}}



</ul>

{{yield}}
